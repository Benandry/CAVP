                                    </div>
                                <h1 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; color:#e3151a;">  </h1>
                                    {% if notif %}
                                            {{ notif }}
                                    {% endif %}
                                    <form method="post" style="width: 23rem;">
                                        <div class="form-outline mb-4">
                                            {{ form(formule) }}
                                        </div>
                                    </form>
                            </div>
                        </div>
                    </div>    
                </div>
            </div>
        </div>
    </section>











