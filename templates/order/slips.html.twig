                                                            <td style="font-size: 11px;">{{ prix }}</td>
                                                        {% else %}
                                                            {% set prix = pro.tpParPl * pro.quantite|abs * pro.vf  %}
                                                            <td style="font-size: 11px;">{{ prix }}</td>
                                                        {% endif %}
