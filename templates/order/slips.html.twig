                                                        <td style="font-size: 11px;">{{ pro.quantite|abs}}</td>
                                                        <td style="font-size: 11px;">{{ pro.tpParPl * pro.quantite|abs }}</td>
                                                        <td style="font-size: 11px;">{{ pro.tpParPl * pro.quantite|abs }}</td>
